<header>
  <h1 class="headline">Books</h1>
</header>
<table>
  <thead>
    <tr class="table-head">
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", books_path(@book.id) %>
        <%= link_to "Edit", books_path(@book.id) %>
        <%= link_to "Destroy", books_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
<div class="title-box">
  <p class="title-name">Title</p>
  <%= f.text_field :title %>
</div>
<div class="body-box">
  <p class="body-text">Body</p>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Create Book' %>
<% end %>
