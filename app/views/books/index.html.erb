<header>
  <h1 class="headline">Bookers</h1>
</header>
<main>
  <section class="title-headline">
    <h3 class="title">Title</h3>
    <div class="title-name">
      <% @books.each do |book| %>
        <span><%= book.title %></span>
      <% end %>
    </div>
  </section>
  <section class="body-box">
    <h3 class="body">Body</h3>
    <div class="body-text">
      <% @books.each do |book| %>
        <span><%= book.body %></span>
        <div class="sidebtn">
          <%= link_to "Show", show_book_path(@book.id) %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
          <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete %>
        </div>
      <% end %>
    </div>
  </section>

</main>
<div class="new">
<%= form_with model:@book, local:true do |f| %>
  <h2>New Book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>