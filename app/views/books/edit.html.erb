<header>
  <h1 class="edit-head">Editing Book</h1>
</header>
<%= form_with model:@book, local:true do |f| %>
<div class="title-box">
  <p class="title-name">Title</p>
  <%= f.text_field :title %>
</div>
<div class="body-box">
  <p class="body-text">Body</p>
  <%= f.text_area :body %>
</div>
<div class="btn">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>
